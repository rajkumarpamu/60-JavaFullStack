 int a=10;
 int b=20;
 int c=30;

 package com.demo;

public class CondStatmtDemo {
	
	public static void main(String[] args) {
		
		 int a,b,c;
		 a=10;
		 b=20;
		 c=30;
		 
		 if(a>b && a>c) {
			 System.out.println("a is greater");
		 }
		 else if(b>a && b>c) {
			 System.out.println("b is greater");
		 }
		 else {
			 System.out.println("c id greater");
		 }
		
		
		  
	}

}


package com.demo;

public class CondStatmtDemo {
	
	public static void main(String[] args) {
		
		 int a,b,c;
		 a=30;
		 b=20;
		 c=30;
		 
		 if(a>b ) {
			 if(a>c) {
			 System.out.println("a is greater");
			 }
			 else {
		     System.out.println("Hello");
			 }
		 }
		 else if(b>a && b>c) {
			 System.out.println("b is greater");
		 }
		 else {
			 System.out.println("c id greater");
		 }
		
		
		  
	}

}


package com.demo;

public class CondStatmtDemo {
	
	public static void main(String[] args) {
		
		 int a,b,c;
		 a=40;
		 b=20;
		 c=50;
		 
		 if(a>b ) {
			 if(a>c) {
			 System.out.println("a is greater");
			 }
			 else {
		     System.out.println("a is not greater");
			 }
		 }
		 else if(b>a ) {
			 if(b>c) {
			 System.out.println("b is greater");
			 }
			 else
			 {
				 System.out.println("b  is not greater");
			 }
		 }
		 else {
			 System.out.println("c id greater");
		 }
		
		
		  
	}

}


switch:
------
If we want to execute statement based on value

switch(value){
	
 case value1 : statement1;
               break;

 case value2 : statement2;
               break;

 case value3 : statement3;
               break;

 default : defaultstatement;
           break;
}

package com.demo;

import java.util.Scanner;

public class CondStatmtDemo {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the key");
		int value = sc.nextInt();

		switch (value) {

		case 1:
			System.out.println("Its Sunday");
			break;

		case 2:
			System.out.println("Its Monday");
			break;

		case 3:
			System.out.println("Its Tuesday");
			break;

		default:
			System.out.println("Need to check please eneter between 1-3");
			break;

		}

		System.out.println("Hello");
	}

}


package com.demo;

import java.util.Scanner;

public class CondStatmtDemo {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the key");
		int value = sc.nextInt();

		switch ((char) value) { // 1

		case 'A':
			System.out.println("Its vowel");
			break;

		case 'E':
			System.out.println("Its vowel");
			break;

		case 'I':
			System.out.println("Its vowel");
			break;

		case 'O':
			System.out.println("Its vowel");
			break;

		case 'U':
			System.out.println("Its vowel");
			break;
		default:
			System.out.println("Its a consonant");
			break;

		}

		System.out.println("Hello");
	}

}


package com.demo;

import java.util.Scanner;

public class CondStatmtDemo {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		System.out.println("please Enter the yes/no");
		String value = sc.next();

		switch (value.toLowerCase()) { // 1

		case "yes":
			System.out.println("Terminating the program");
			break;

		case "no":
			System.out.println("Please continue");
			break;

		default:
			System.out.println("please enter yes / no");
			break;

		}

		System.out.println("Hello");
	}

}


