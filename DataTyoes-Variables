package com.demo;

public class SecondProgram {

	public static void main(String[] args) {

		System.out.println(Short.SIZE);
		System.out.println(Short.MIN_VALUE);
		System.out.println(Short.MAX_VALUE);

		System.out.println(Math.pow(2, 15));

	}

}


